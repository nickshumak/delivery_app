<div class="row clearfix">
  <% if package.completed? %>
    <div class="complete">
      <%= link_to complete_courier_package_path(@courier, package.id), method: :patch do %>
        <i style="opacity: 1;" class="fa fa-check"></i>
        <% end %>
    </div>
    <div class="package">
      <p style="opacity: 0.4;"><span style="text-decoration: line-through;"><%= package.tracking_number %></span></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", courier_package_path(@courier, package.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% else %>
    <div class="complete">
      <%= link_to complete_courier_package_path(@courier, package.id), method: :patch do %>
        <i style="opacity: 1;" class="fa fa-circle-thin"></i>
      <% end %>
    </div>
    <div class="package">
      <p><%= package.tracking_number %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", courier_package_path(@courier, package.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>